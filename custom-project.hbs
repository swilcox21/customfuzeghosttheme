    <div class="project-template-full">
        <div style="width:100%; min-height:400px; background-color:#f7f3f2; padding-top:50px;">
            <div style="display:flex; width:1200px; margin:auto;">
                <div>
                    <div>
                        <a href="/work/" style="color:#E30F17; letter-spacing:4px; font-size:1.6rem; font-weight:700;"><i class="fa fa-arrow-left"></i> &nbsp;WORK</a>
                    </div>    
                    <div style="display:flex; flex-direction:column; justify-content:center; min-height:275px">
                        <h1 style="margin-bottom:10px; margin-top:20px; ">{{title}}</h1>
                        <div style="width:90%; font-size:19px; line-height:2.8rem; letter-spacing:1px; margin-bottom:30px;">{{custom_excerpt}}</div>
                    </div>  
