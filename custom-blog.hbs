{{!< default}}

<img src="https://raw.githubusercontent.com/swilcox21/GhostFuze/master/Fuze/content/images/2022/07/blog.png" />
{{#get "posts" include="tags" filter="tag:-'_project'+tag:-'_team-member'"}}
<div class="custom-allposts-large" style="background-color:#f7f3f2; padding-left:15%; padding-right:15%;">
    <button type="search" data-ghost-search style=" padding-left:20px; text-align:start; color:rgb(65, 65, 65); background-color:white; padding-right:20px; padding-top:10px; padding-bottom:10px;  border-radius:50px; border: 1px solid black;">
        Search blog posts &nbsp;   &nbsp;   &nbsp;   &nbsp;   &nbsp;   &nbsp;   &nbsp;   &nbsp;   &nbsp;   &nbsp;   &nbsp;   &nbsp;   &nbsp;   &nbsp;   &nbsp;   &nbsp;   &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp; <i class="fa fa-search" aria-hidden="true"></i>
    </button>
    {{#foreach posts}}
        {{#has index="0"}}
            <a href="{{url}}">
                <div style="display:flex; margin-top:25px; justify-content:center;">
                    <div style="width:65%; height:35%; border-radius:10px 0px 0px 10px; overflow:hidden;"> 
                        <img 
                            style="width:100%; height:100%; transform:scale(1.5);"
                            src="{{feature_image}}"
                            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                            loading="lazy"
                        />
                    </div>
                    <div style="background-color:white; border-radius:0px 10px 10px 0px; padding:20px; width:450px; display:flex; flex-direction:column; align-items:flex-start; justify-content:flex-end">
                        <div style="margin:5px; font-size:1.5rem">
                            {{date published_at format="MMMM DD, YYYY"}}
                        </div>
                        <h2 style=" margin:5px; text-align:left; color:#E30F17; ">
                            {{title}}
                        </h2>
                        {{#primary_tag}}
                            <div style=" font-size:1.6rem; color:black; text-align:left; margin:5px;">{{name}}</div>
                        {{/primary_tag}}
                    </div>
                </div>
            </a>
        {{/has}}
    {{/foreach}}
    <div class="" style="display:grid; gap: 4.8vmin 4vmin; grid-template-columns: repeat(3, 1fr); align-items:center; padding-top: 50px; padding-bottom:60px;">
    {{#foreach posts}}
        {{^has index="0"}}
            <a href="{{url}}">
                <div style="height:400px;width:100%; background-color:white; border-radius:10px 10px 10px 10px; ">
                    <div style="border-radius:10px 10px 0px 0px; width:100%; height:60%; overflow:hidden;"> 
                        <img 
                            style="width: 100%; height:100%; transform:scale(1.5)"
                            src="{{feature_image}}"
                            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                            loading="lazy"
                        />
                    </div>
                    <div style="margin:20px;">
                        <div style="margin:5px; font-size:1.5rem">
                                {{date published_at format="MMMM DD, YYYY"}}
                            </div>
                        <h4 style="max-width:290px; margin:5px; text-align:left; color:#E30F17;">
                            {{title}}
                        </h4>
                        {{#primary_tag}}
                            <div style=" font-size:1.6rem; text-align:left; margin:5px;">{{name}}</div>
                        {{/primary_tag}}
                    </div>
                </div>
            </a>
            {{/has}}
    {{/foreach}}
    </div>
</div>
{{/get}}
